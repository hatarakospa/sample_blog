<h1>新規記事作成</h1>

<%= form_for :article, url: articles_path do |f| %>

<% if @article.errors.any? %>
  <%= @article.errors.count %>個のエラーがあります<br>
  <% @article.errors.full_messages.each do |msg| %>
    <%= msg %><br>
    <% end %>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
  </p>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %><br>
  </p>
  <p>
    <%= f.label :category %>
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %><br>
      <%= category.label do %>
        <%= category.check_box %>
        <%= category.text %>
        <% end %>
      <% end %>
  </p>
    <%= f.submit %>

    <% end %>
