<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <div class="post-preview">
          <h2 class="post-title">
          <%= @article.title %>
          </h2>
        <p class="post-meta">
          <%= @article.created_at %></p>
          <hr>
          <%= @article.text %><br>
          <% @article.categories.each do |category| %>
          <%= category.name %>
          <% end %>
      </div>
      <hr>
    </div>
  </div>
</div>